<% if user_signed_in? %>
  <% if drink.favorited_by?(current_user) %>
    <%= link_to drink_favorites_path(drink), class:"favo", method: :delete do %>
      ♥ <%= drink.favorites.count %> 
    <% end %>
  <% else %>
    <%=link_to drink_favorites_path(drink.id), class:"favo", method: :post do %>
      ♡ <%= drink.favorites.count %> 
    <% end %>
  <% end %>
<% else %>
  ♥ <%= drink.favorites.count %> 
<% end %>